<h2> Score: <%= @quiz.score %> </h2>
<% question = random_question(@quiz.category) %>

<%= image_tag(note_image_path(question), size:"304x228") %>

<% piano_style = [ 'left: 0px; z-index: 0;',
                   'left: 42px; z-index: 1;',
                   'left: 62px; z-index: 0;',
                   'left: 104px; z-index: 1;',
                   'left: 124px; z-index: 0;',
                   'left: 186px; z-index: 0;',
                   'left: 228px; z-index: 1;',
                   'left: 248px; z-index: 0;',
                   'left: 290px; z-index: 1;',
                   'left: 310px; z-index: 0;',
                   'left: 352px; z-index: 1;',
                   'left: 372px; z-index: 0;'] %>

</br>
</br>

<% 12.times do |index| %>
  <%= form_for [@quiz, Puzzle.new], :html => { :style => 'position: absolute; top: 420px;' + piano_style[index].to_s} do |f| %>
      <%= f.hidden_field :answer, :value => index+1 %>
      <%= f.hidden_field :question, :value => question %>
      <%= f.submit "Button Number #{index+1}", :type => :image, :src => key_image_path(index+1) %>
  <% end %>
<% end %>
